{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "newLine": "lf",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src"]
}
