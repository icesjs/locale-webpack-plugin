{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "inlineSources": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "newLine": "lf",
    "skipLibCheck": true
  },
  "include": ["src"]
}
